---
import Layout from "../layouts/Layout.astro";
import RegisterComponent from "../components/Register.vue";
---

<Layout title="Register">
    <main class="flex flex-col md:flex-row md:justify-between min-h-[88vh] w-11/12 md:w-[80%] items-center mx-auto">
        <div class=" md:hidden flex justify-center flex-col items-center w-[50%] mt-[10vh] md:mt-0">
            <img src="/fotos/light.png" class="w-[200px]" alt="letterlist foto">
            <h1 class="text-6xl text-light font-bold hidden md:block">LetterList</h1>
        </div>
        <div class="flex justify-center items-center w-11/12 md:w-[50%] mt-10 md:mt-0 flex-col">
            <h1 class="text-light text-6xl hidden md:block mb-2">Register</h1>
            <RegisterComponent client:load />
            <span class="mt-4">Have an account? <a href="/login" class="text-brand">Sign In</a></span>
        </div>
        <div class="hidden md:flex justify-center flex-col items-center w-[50%] mt-[10vh] md:mt-0">
            <img src="/fotos/light.png" class="w-[200px]" alt="letterlist foto">
            <h1 class="text-6xl text-light font-bold hidden md:block">LetterList</h1>
        </div>
    </main>
</Layout>