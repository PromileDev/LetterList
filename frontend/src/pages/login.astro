---
import Layout from "../layouts/Layout.astro";
import LoginComponent from "../components/Login.vue";
---

<Layout title="Login">
    <main class="flex flex-col md:flex-row md:justify-between min-h-[87vh] w-11/12 md:w-[80%] items-center mx-auto">
        <div class="flex justify-center flex-col items-center w-[50%] mt-[10vh] md:mt-0">
            <img src="/fotos/light.png" class="w-[200px]" alt="letterlist foto">
            <h1 class="text-6xl text-light font-bold hidden md:block">LetterList</h1>
        </div>
        <div class="flex justify-center items-center w-11/12 md:w-[50%] mt-10 md:mt-0 flex-col">
            <h1 class="text-light text-6xl hidden md:block mb-2">Login</h1>
            <LoginComponent client:load />
            <span class="mt-4">Don't have an account yet? <a href="/register" class="text-brand">Sign Up</a></span>
            <span>Forgot your password? <a href="" class="text-brand">Reset</a></span>
        </div>
    </main>
</Layout>